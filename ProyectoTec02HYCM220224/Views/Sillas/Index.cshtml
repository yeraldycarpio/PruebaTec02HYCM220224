@model IEnumerable<ProyectoTec02HYCM220224.Models.Silla>

@{
    ViewData["Title"] = "Index";
}

<h4>SILLAS</h4>

<p>
    <a class="btn btn-dark" asp-action="Create" > Crear nuevo registro</a>
</p>
<table class="table table-striped table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMaterialNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                    @if (item.Imagen != null && item.Imagen.Length > 0)
                    {
                        <img class="bloque d mx-auto redondeado" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Imagen))" width="75" height="75">
                    }

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMaterialNavigation.Nombre)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.IdSilla">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdSilla">Details</a> |
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.IdSilla">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
